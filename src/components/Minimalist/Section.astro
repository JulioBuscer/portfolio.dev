---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
  <hr />
</section>
<style>
  section {
    max-width: 700px;
    margin: 0 auto 12px;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.25;
    font-size: 1.25rem;
  }

  hr {
    margin: 12px 0;
    border: 1px solid #555;
  }
</style>
