---
import LanguagePicker from "@/components/LanguagePicker.astro";

//import { getRelativeLocaleUrl } from "astro:i18n";

import { getLangFromUrl, useTranslations } from "@/i18n/utils.ts";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
import type { Nav } from "@/interfaces/PageData.ts";

const NAV = t("nav") as Nav;
const { home, experience, projects, about, contact, cv } = NAV;

const CV_URL = lang == "es" ? "/cv" : "/" + lang + "/cv";

import MENU from "@/icons/menu.astro";
---

<header class="flex justify-center py-1 w-full xl:w-[1120px] mx-auto">
  <span></span>
  <nav class="flex flex-row opacity-90">
    <div class="hamburger mx-2">
      <MENU class="menu size-8" />
      <div class="nav-links">
        <a class="link" href="#top">{contact}{/*home*/}</a>
        <a class="link" href="#experiencia">{experience}</a>
        <a class="link" href="#proyectos">{projects}</a>
        <a class="link" href="#sobre-mi" style="display: none;">{about}</a>
        <a class="link" href="#contacto" style="display: none;">{contact}</a>
        <a class="link" href={CV_URL}>{cv}</a>
      </div>
    </div>
    <div style="display: grid; align-items: center">
      <LanguagePicker />
    </div>
  </nav>
</header>

<script>
  document.querySelector(".menu")?.addEventListener("click", () => {
    document.querySelector(".nav-links")?.classList.toggle("expanded");
  });

  document.querySelectorAll(".link").forEach((link) => {
    link.addEventListener("click", () => {
      console.log("click");
      document.querySelector(".nav-links")?.classList.toggle("expanded");
    });
  });
</script>

<style>
  /* estilos de la barra de navegaci√≥n*/

  .nav-links a:hover,
  .nav-links a:focus,
  .menu:hover,
  .menu:focus {
    transition: all 0.5s;
    background-color: #d8b4fee6;
    color: white;
    border-radius: 5px;
  }

  

  .expanded {
    display: unset !important;
  }

  .nav-links {
    width: 100%;
    top: 5rem;
    display: none;
  }

  .nav-links a {
    display: block;
    color: #d8b4fee6;
    background-color: #444;
    text-align: center;
    padding: 0.5rem 0;
    transition: all 0.5s;
  }

  .hamburger {
    display: block;
    cursor: pointer;
  }
  .menu {
    cursor: pointer;
    display: unset;
    min-width: 10rem;
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      margin-left: 5em;
      display: block;
      position: static;
      width: auto;
    }

    .nav-links a {
      display: inline-block;
      padding: 0.1rem 0.5rem;
      min-width: max-content;
      max-width: max-content;
      background: none;
      color: white;
    }

    .hamburger {
      display: unset;
    }

    .menu {
      display: none;
    }
  }

  header {
    position: fixed;
    top: 0;
    z-index: 1;
    background-color: black;
    min-height: 40px;
    max-height: 40px;
    font-size: large;
    opacity: 0.9;
  }
</style>
